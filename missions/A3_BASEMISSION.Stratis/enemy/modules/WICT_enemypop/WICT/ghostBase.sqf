if (isServer) then{	private ["_call","_flag","_action","_foundW","_foundE","_foundN"];	_call = _this select 0;	_flag = _this select 1;	_action = _this select 2;	_foundW = 0;	_foundE = 0;	_foundN = 0;		{		if (_x == _flag) then {_foundN = 1};	} forEach WICT_nbl;		{		if (_x == _flag) then {_foundW = 1};	} forEach WICT_wbl;		{		if (_x == _flag) then {_foundE = 1};	} forEach WICT_ebl;	if (_action == "add") then 	{		if ((_call == "west") and (_foundW == 0) and (_foundE == 0) and (_foundN == 0)) then		{			WICT_wbl set [count WICT_wbl, _flag];			_flag setMarkerColor "ColorBlue";			_flag setMarkerSize [1, 1];		};				if ((_call == "east") and (_foundW == 0) and (_foundE == 0) and (_foundN == 0)) then		{			WICT_ebl set [count WICT_ebl, _flag];			_flag setMarkerColor "ColorRed";			_flag setMarkerSize [1, 1];		};				if ((_call == "neutral") and (_foundW == 0) and (_foundE == 0) and (_foundN == 0)) then		{			WICT_nbl set [count WICT_nbl, _flag];			_flag setMarkerColor "ColorBlack";			_flag setMarkerSize [1, 1];		};	};		if (_action == "remove") then 	{		if ((_call == "west") and (_foundW == 1) and (_foundE == 0) and (_foundN == 0)) then		{			WICT_wbl = WICT_wbl - [_flag];			_flag setMarkerColor "ColorYellow";			_flag setMarkerSize [0, 0];		};				if ((_call == "east") and (_foundW == 0) and (_foundE == 1) and (_foundN == 0)) then		{			WICT_ebl = WICT_ebl - [_flag];			_flag setMarkerColor "ColorYellow";			_flag setMarkerSize [0, 0];		};				if ((_call == "neutral") and (_foundW == 0) and (_foundE == 0) and (_foundN == 1)) then		{			WICT_nbl = WICT_nbl - [_flag];			_flag setMarkerColor "ColorYellow";			_flag setMarkerSize [0, 0];		};	};};